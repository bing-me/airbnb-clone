<div class="flats-cards-container">
  <div class="card-container">
    <% @flats.each do |flat| %>
      <div class="card">
        <% if flat.photo.attached? %>
          <%= cl_image_tag flat.photo.key, class: "card-img-top" %>
        <%else%>
          <%= image_tag "./app/assets/images/placeholder_flat_image.jpg", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to flat.name, flat_path(flat.id) %></h5>
          <p class="card-text"><%= flat.country %></p>
        </div>
      </div>
  <% end %>
  </div>
</div>
