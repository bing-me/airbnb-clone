<div class="container mt-3 form-spacer">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mt-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%# <div class="form-actions rounded-pill btn btn-secondary mb-3"> %>
    <%# <div class="form-actions booking-button fs-4 rounded-4 btn-sm"> %>
      <%= f.button :submit, "Continue", class: "btn session-button fs-4 rounded-4 btn-sm" %>
    <%# </div> %>
  <% end %>

  <%# <%= render "devise/shared/links" %>
</div>
