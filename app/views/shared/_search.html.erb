<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control" id="search-form">
    <input class="form-control string required" type="text" name="search_query" id="search_query" />
    <label for="start">Check-in:</label>
    <input type="date" id="check-in" name="check-in" value=<%= Date.today %> min=<%= Date.today %> max="2030-12-31">
    <label for="start">Check-out:</label>
    <input type="date" id="check-out" name="check-out" value=<%= (Date.today+1) %> min=<%= Date.tomorrow %> max="2030-12-31">
    <input type="number" id="guests" name="guests" min="1">
    <label for="guests">Add guests:</label>
    <button type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>
